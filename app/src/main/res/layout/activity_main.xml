<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arpit.cryptoalert.alertx.MainActivity">

    <TextView
        android:id="@+id/txtRipple"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="270dp"
        android:layout_marginTop="29dp"
        android:elevation="5dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="36dp"
        android:text="Ripple"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtRipple"
        app:layout_constraintEnd_toStartOf="@+id/txtRipple"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Alert Low"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtLow"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edtLow"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="number"
        android:text="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/btnhigh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Alert High"
        app:layout_constraintBaseline_toBaselineOf="@+id/edthigh"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="Set"
        app:layout_constraintBaseline_toBaselineOf="@+id/edtLow"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnhigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Set"
        app:layout_constraintBaseline_toBaselineOf="@+id/edthigh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edthigh" />

    <EditText
        android:id="@+id/edthigh"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:inputType="number"
        android:text="0.0"
        app:layout_constraintEnd_toStartOf="@+id/btnhigh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="Variation"
        app:layout_constraintEnd_toStartOf="@+id/edtVar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edtVar" />

    <EditText
        android:id="@+id/edtVar"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="236dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/edthigh" />

</android.support.constraint.ConstraintLayout>
